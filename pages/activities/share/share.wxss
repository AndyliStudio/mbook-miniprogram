page {
  height: 100%;
}
.share-container {
  height: 100%;
  overflow-y: auto;
}

.header-bg {
  position: absolute;
  width: 100%;  
  height: 100%;
  filter: alpha(opacity=100 finishopacity=50 style=1 startx=0,starty=0,finishx=0,finishy=150) progid:DXImageTransform.Microsoft.gradient(startcolorstr=#2fb790,endcolorstr=#66c1a8,gradientType=0);
  -ms-filter: alpha(opacity=100 finishopacity=50 style=1 startx=0,starty=0,finishx=0,finishy=150) progid:DXImageTransform.Microsoft.gradient(startcolorstr=#2fb790,endcolorstr=#66c1a8,gradientType=0);/*IE8*/	
  background:#2fb790; /* 一些不支持背景渐变的浏览器 */  
  background: -moz-linear-gradient(top, #2fb790, #66c1a8);  
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(#2fb790), to(#66c1a8));  
  background: -o-linear-gradient(top, #2fb790, #66c1a8); 
  z-index: -1;
}

.header {
  width: 100%;  
  height: 750rpx;
  background: url('//fs.andylistudio.com/perhelp/v1/share_bg.png') no-repeat;
  background-position: center center;
  background-size: 100% auto;
  padding-top: 200rpx;
  box-sizing: border-box;
}

.header .info {
  font-size: 32rpx;
  color: #ffffff;
  text-align: left;
  padding: 0 20rpx;
  display: inline-block;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
}

.header .info .label{
  display: inline-block;
  width: 220rpx;
  text-align: left;
}

.header .info .label.second{
  margin-left: 30rpx;
}
.header .info .padding{
  display: inline-block;
  padding-left: 20rpx;
  width: 80rpx;
  font-size: 36rpx;
}

.header .operation {
  text-align: center;
  display: flex;
  display: -webkit-flex;
  flex-flow: row wrap;
  justify-content: center;
  margin-top: 50rpx;
}

.header .operation > button {
  display: inline-block;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background: #565f8f;
  outline: none;
  border: none;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #ffffff;
  color: #ffffff;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.wxfriend {
  margin-top: -150rpx;
  padding: 0 20rpx;
}
.wxfriend .title {
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  padding-left: 0;
  color: #ffffff;
}

.wxfriend .des {
  margin-top: 20rpx;
  color: #f8f8f8;
  font-size: 28rpx;
  text-align: center;
}
.wxfriend .wx-text {
  color: #f8f8f8;
  font-size: 32rpx;
}
.wxfriend > image {
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}
.wxfriend .link {
  text-decoration: underline;
  color: #f8f8f8;
}
.wxfriend .save {
  text-align: center;
  font-size: 32rpx;
  padding: 10rpx 0;
}
.rule {
  font-size: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
  padding: 0 25rpx;
  color: #f8f8f8;
}

.rule .title {
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  padding-left: 0;
  color: #ffffff;
}