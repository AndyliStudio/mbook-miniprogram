page {
  height: 100%;
}

.friend-help {
  height: 100%;
}

.friend-help .bg {
  width: 100%;
  height: 400rpx;
}

.friend-help .content {
  position: relative;
  top: -130rpx;
}

.friend-help .title {
  display: -webkit-flex;
  display: flex;
  height: 130rpx;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: flex-start;
  background: rgba(255, 255, 255, 0.8);
  line-height: 1.6em;
  padding-left: 30rpx;
}

.friend-help .title .name {
  color: #24272c;
  font-size: 36rpx;
}

.friend-help .title .des {
  color: #acacac;
  font-size: 24rpx;
}

.friend-help .books {
  padding: 20rpx 0;
}

.friend-help .books .loading-img {
  display: block;
  width: 180rpx;
  margin: 0 auto;
  height: 180rpx;
}

.friend-help .books .loading-text {
  text-align: center;
  color: #acacac;
  font-size: 28rpx;
  margin-top: -10rpx;
}

.friend-help .icon-zanwushuju {
  font-size: 240rpx;
  color: #9e9e9e;
}

.friend-help .book-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.friend-help .book-item .img {
  width: 20%;
  height: 200rpx;
  box-shadow: 0 0 24rpx #ccc;
}

.friend-help .book-item .left {
  display: inline-block;
  width: 50%;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-left: 4%;
  padding-right: 4%;
  box-sizing: border-box;
}

.friend-help .book-item .left .name {
  color: #23272a;
  font-size: 34rpx;
}

.friend-help .book-item .left .author {
  color: #7b7f82;
  font-size: 28rpx;
}

.friend-help .book-item .right {
  display: inline-block;
  margin: 0;
  width: 160rpx;
  height: 64rpx;
  background: -webkit-linear-gradient(left, #0f81fb, #019dff);
  background: linear-gradient(to right, #0f81fb, #019dff);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #ffffff;
  letter-spacing: 2rpx;
  line-height: 64rpx;
}

.friend-help .book-item .progress {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.friend-help .book-item .progress progress {
  width: 66%;
}
