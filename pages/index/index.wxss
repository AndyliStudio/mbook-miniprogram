/**index.wxss**/
.loading {
  position: fixed;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  z-index: 10000;
}

.loading > image {
  height: 200rpx;
  width: 200rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx;
}

.index {
  background: #f4f4f4;
  height: 100%;
}

.index.overflow {
  height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
}

/* 轮播样式 */
swiper.square-dot .wx-swiper-dot {
  background: #fff;
  opacity: 0.4;
  width: 10rpx;
  height: 10rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease-in-out 0s;
}

swiper.square-dot .wx-swiper-dot.wx-swiper-dot-active {
  opacity: 1;
  width: 30rpx;
}

swiper.round-dot .wx-swiper-dot {
  /* background: #39b54a; */
  width: 10rpx;
  height: 10rpx;
  top: -4rpx;
  transition: all 0.3s ease-in-out 0s;
  position: relative;
}

swiper.round-dot .wx-swiper-dot.wx-swiper-dot-active::after {
  content: "";
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  top: 0rpx;
  left: 0rpx;
  right: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
  border-radius: 20rpx;
}

swiper.round-dot .wx-swiper-dot.wx-swiper-dot-active {
  width: 18rpx;
  height: 18rpx;
  top: 0rpx;
}

.screen-swiper {
  min-height: 300rpx;
}

.screen-swiper navigator {
  width: 100%;
  height: 100%;
}

.screen-swiper image {
  width: 100%;
  display: block;
  height: 100%;
  margin: 0;
}

.index .swiper-box navigator {
  width: 100%;
  height: 100%;
}

.index .slide-image {
  width: 100%;
