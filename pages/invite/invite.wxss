.invite {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
  background-image: url(https://fs.andylistudio.com/1537010042188.png);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
}

.container {
  font-size: 0.14rem;
  line-height: 2;
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  vertical-align: baseline;
  background-size: 100% 100%;
  color: #ffffff;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

.container view,
.container text {
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

.container .pic-wrap {
  display: block;
  width: 100%;
  height: 466rpx;
  background-image: url(https://fs.andylistudio.com/1537010042078.png);
  background-position: center;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.desc-wrap {
  overflow: hidden;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  text-align: center;
}

.desc-wrap .desc {
  font-size: 22rpx;
  line-height: 1.6;
  position: relative;
  display: -ms-flexbox;
  display: flex;
  height: 160rpx;
  margin: 0 auto;
  padding: 0.04rem 30rpx 0.04rem;
  background-image: url(https://fs.andylistudio.com/1537011053690.png);
  background-size: 100% 100%;
  -ms-flex-align: center;
  align-items: center;
}

.desc-wrap .desc .content {
  text-align: center;
  width: 100%;
  color: #ffffff;
}

.container .time-progress {
  width: 100%;
  height: 200rpx;
  background-size: 100% 100%;
}

.container .time-progress .countdown-wrap {
  text-align: center;
}

.container .time-progress .countdown-wrap .countdown {
  display: -webkit-box;
  -webkit-box-pack: center;
  height: 54rpx;
  margin: 30rpx 0 60rpx 0;
  background-size: 100% 100%;
  overflow: hidden;
}

.container .time-progress .countdown-wrap .countdown text {
  color: #ffffff;
  font-size: 24rpx;
}

.container .time-progress .countdown-wrap .countdown .left,
.container .time-progress .countdown-wrap .countdown .time,
.container .time-progress .countdown-wrap .countdown .right {
  display: block;
  height: 100%;
  background-size: 100% 100%;
  float: left;
}

.container .time-progress .countdown-wrap .countdown .left {
  margin-right: -1px;
  width: 80rpx;
  background-image: url(https://fs.andylistudio.com/1537020730579.png);
}

.container .time-progress .countdown-wrap .countdown .time {
  font-weight: bold;
  line-height: 50rpx;
  text-align: center;
  background-image: url(https://fs.andylistudio.com/1537020730601.png);
  background-repeat: repeat-x;
}

.container .time-progress .countdown-wrap .countdown .right {
  width: 50rpx;
  background-image: url(https://fs.andylistudio.com/1537020730632.png);
}

.container .time-progress .progress-wrap {
  padding: 0 10% 0;
}

.container .time-progress .progress-wrap .fix {
  position: relative;
  overflow: visible;
}

.container .time-progress .progress-wrap .fix .progress {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 24rpx;
  margin-top: 20rpx;
  border: 6rpx solid #f06060;
  border-radius: 18rpx;
  background-color: #fff;
}

.container .time-progress .progress-wrap .fix .progress .inner {
  width: 3%;
  height: 100%;
  border-radius: 0.38rem;
  background: #ffc364;
  background-origin: content-box;
}

.container .time-progress .progress-wrap .fix .bubble {
  position: absolute;
  top: -48rpx;
  left: 0;
  height: 60rpx;
  margin-left: -0.23rem;
}

.container .time-progress .progress-wrap .fix .bubble .wrap {
  font-size: 22rpx;
  line-height: 0.26rem;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  height: 40rpx;
  padding: 0 0.1rem;
  white-space: nowrap;
  border-radius: 6rpx;
  background-color: #ffc364;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: center;
  justify-content: center;
  color: #ffffff;
}

.container .time-progress .progress-wrap .fix .bubble .wrap .number {
  display: block;
  margin-left: 8rpx;
  color: #f06060;
}

.container .time-progress .progress-wrap .fix .bubble .bottom {
  position: absolute;
  left: 20rpx;
  width: 0;
  height: 0;
  border-width: 8rpx 22rpx 2rpx 0;
  border-style: solid;
  border-color: #ffc364 transparent transparent transparent;
}

.container .time-progress .progress-wrap .fix .middle {
  font-size: 22rpx;
  font-weight: bold;
  position: absolute;
  top: -3rpx;
  color: #f06060;
}

.container .time-progress .progress-wrap .fix .complete {
  font-size: 22rpx;
  font-weight: bold;
  position: absolute;
  top: -3rpx;
  color: #f06060;
  right: 0;
  margin-right: 0.05rem;
}

.container .btn-wrap {
  display: -ms-flexbox;
  display: flex;
  text-align: center;
  -ms-flex-pack: distribute;
  justify-content: space-around;
  margin-top: 50rpx;
}

.container .btn-wrap .rank-list {
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 8rpx;
  transition: all linear 0.1s;
  -webkit-transition: all linear 0.1s;
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin: 0.07rem auto 0;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  text-align: center;
  color: #ffffff;
  background-size: 100% 100%;
  background-color: #feb752;
}

.container .main-btn {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 72rpx;
  display: -ms-flexbox;
  display: flex;
  transition: all linear 0.1s;
  -webkit-transition: all linear 0.1s;
  border-radius: 8rpx;
  width: 200rpx;
  height: 72rpx;
  margin: 0.06rem auto 0;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  text-align: center;
  background-color: #ea474e;
  color: #ffffff;
  background-size: 100% 100%;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.container .main-btn:active {
  -webkit-filter: brightness(0.8);
}

.container .task-status {
  text-align: center;
  padding: 0rpx 30rpx;
}

.container .task-status > image {
  width: 150rpx;
  height: 150rpx;
}

.container .task-status > view {
  margin-top: -20rpx;
  color: #8a8a8a;
  text-align: left;
}
