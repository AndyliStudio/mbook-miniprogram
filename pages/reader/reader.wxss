page {
  height: 100%;
}

.load-fail {
  height: 100%;
  position: relative;
  padding-top: 100rpx;
  box-sizing: border-box;
}

.loading {
  height: 100%;
  position: relative;
}

.loading > image {
  height: 200rpx;
  width: 200rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -100rpx;
  margin-left: -100rpx;
}

.reader {
  height: 100%;
  overflow: hidden;
  position: relative;
}

.reader .content {
  display: block;
  overflow-x: hidden;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}

.reader .content text {
  line-height: 70rpx;
  position: relative;
  display: block;
  text-align: justify;
  /* transition: left 0.5s;
  -webkit-transition: left 0.5s; */
  transition-timing-function: ease;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 提示样式 */
.reader .tips {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2000;
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}

.reader .tips text {
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}

.reader .tips .show-bar {
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}

.reader .tips .show-bar .iconfont {
  font-size: 40rpx;
  vertical-align: middle;
  color: #fff;
  margin-top: -20rpx;
}

/* 提示样式 */
.reader .buy {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 1800;
  text-align: center;
}

.reader .buy-inner {
  width: 100%;
  margin-top: 200rpx;
  height: calc(100% - 200rpx);
  background: -moz-linear-gradient(top, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 30%, rgba(248, 247, 252, 1) 100%);
  background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 30%, rgba(248, 247, 252, 1) 100%);
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 30%, rgba(248, 247, 252, 1) 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00ffffff', endColorstr='#f8f7fc',GradientType=0 );
  position: relative;
}

.reader .buy-inner button {
  position: absolute;
  width: 90%;
  left: 5%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 36rpx;
}

.reader .buy-inner .buy-btn {
  bottom: 460rpx;
}

.reader .buy-inner .buy-total {
  bottom: 320rpx;
}

.reader .buy-inner .share-btn {
  bottom: 180rpx;
}

.reader .buy-inner .cancel-btn {
  bottom: 40rpx;
  color: #f72528;
}

/* 底部控制条的样式 */

.reader .control {
  height: 110rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  /* border-top: 1px solid #d7d7d7; */
  box-sizing: border-box;
}

.reader .control-item {
  height: 100%;
  width: 100rpx;
}

.reader .control-item .iconfont {
  display: inline-block;
  width: 100%;
  height: 100%;
  color: #4990e2;
  font-size: 40rpx;
  line-height: 104rpx;
  vertical-align: middle;
  text-align: center;
}

.reader .control-item .iconfont.blod {
  font-weight: bold;
}

.reader .control-item .iconfont.icon-vertical-slide,
.reader .control-item .iconfont.icon-tubiao1diaozhengjindu {
  font-size: 58rpx;
}

.reader .control-item .iconfont.icon-tubiao1diaozhengjindu {
  position: relative;
  top: 2rpx;
}

.reader .control-btns {
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.reader .control-btns button {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}

.reader .control-detail {
  height: 320rpx;
  width: 100%;
  position: absolute;
  bottom: 110rpx;
  left: 0;
}

.reader .control-detail > view {
  width: 100%;
  position: absolute;
  display: none;
}

.reader .control-detail .jingdu {
  position: relative;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  height: 110rpx;
}

.reader .faction {
  color: #333;
  font-size: 30rpx;
}

.rleft1-icon,
.rleft2-icon,
.rleft3-icon,
.rleft4-icon {
  position: absolute;
  top: 25rpx;
  left: 10rpx;
  display: inline-block;
  height: 60rpx;
  width: 60rpx;
}

.rright1-icon,
.rright2-icon,
.rright3-icon,
.rright4-icon {
  position: absolute;
  top: 25rpx;
  right: 10rpx;
  display: inline-block;
  height: 60rpx;
  width: 60rpx;
}

.reader .nameAndNum {
  text-align: center;
  padding-top: 18rpx;
}

.reader .jingdu-num {
  position: relative;
  top: 8rpx;
}

.reader .brightness {
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 15rpx 20rpx 6rpx 20rpx;
  align-items: center;
}

.reader .brightness .iconfont {
  display: inline-block;
  width: 72rpx;
  text-align: center;
  font-size: 48rpx;
  position: relative;
  top: -2rpx;
}

.reader .brightness .iconfont.bigger {
  font-size: 48rpx;
  top: -3rpx;
}

.reader .brightness .bright-slider {
  flex: 1;
}

.reader .color-select {
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  padding: 16rpx 10rpx 0 10rpx;
  box-sizing: border-box;
}

.reader .color-select .color-item {
  width: 150rpx;
  height: 50rpx;
  border-radius: 8rpx;
  text-align: center;
}

.reader .color-select .icon-yueliang {
  display: inline-block;
  position: relative;
  top: -12rpx;
  color: #4990e2;
}

.white-bg {
  background-color: #ffffff;
}

.pink-bg {
  background-color: #f8f3e0;
}

.green-bg {
  background-color: #ccf1d0;
}

.back-bg {
  background-color: #202930;
}

.reader .font-detail {
  display: -webkit-flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
}

.reader .fontSize {
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 15rpx 20rpx 6rpx 20rpx;
  align-items: center;
  height: 60rpx;
}

.reader .fontSize .iconfont {
  font-size: 48rpx;
  display: inline-block;
  width: 72rpx;
  text-align: center;
  vertical-align: middle;
  position: relative;
  top: -6rpx;
}

.reader .fontSize .iconfont.small {
  font-size: 36rpx;
}

.reader .fontSize .font-slider {
  flex: 1;
}

.reader .fontSelector {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  width: 100%;
  font-size: 32rpx;
}

.reader .fontSelector > text {
  height: 100%;
  width: 100%;
  line-height: 100%;
}

.reader .fontDetail {
  position: absolute;
  top: -120rpx;
  z-index: 1000;
  text-align: left;
  width: 100%;
  bottom: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.reader .fontDetail .allItem {
  overflow: auto;
  height: 200rpx;
}

.reader .fontDetail .font-item {
  height: 70rpx;
  position: relative;
  line-height: 70rpx;
}

.reader .fontDetail .font-item text {
  display: inline-block;
}

.reader .fontDetail .font-item icon {
  position: absolute;
  top: 70%;
  transform: translateY(-50%);
  right: 10rpx;
}

.reader .fontDetail .font-item:last-child {
  border-bottom: none;
}

.reader .fontDetail .font-title {
  text-align: left;
  height: 75rpx;
  line-height: 60rpx;
  position: relative;
  /* border-bottom:1px solid #1a1e21; */
}

.reader .fontDetail .font-title .iconfont {
  margin-right: 15rpx;
}

.mulu-detail {
  position: absolute;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  top: 0;
  left: 0;
  display: none;
  z-index: 1000;
}

.mulu-detail.active {
  display: block;
}

.mulu-detail .muluPanel {
  transition: width 1s;
  -moz-transition: width 1s; /* Firefox 4 */
  -webkit-transition: width 1s; /* Safari 和 Chrome */
  -o-transition: width 1s; /* Opera */
  height: 100%;
}

.mulu-detail .mulu-swipers {
  height: 92%;
  width: 100%;
}

.mulu-detail .bottomCtr {
  height: 8%;
  width: 100%;
  display: -webkit-flex;
  flex-flow: row nowarp;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.mulu-detail .mulu-swiper {
  position: relative;
}

.mulu-detail .mulu-swiper .search {
  margin: 30rpx 30rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 28rpx;
  position: relative;
}

.mulu-detail .mulu-swiper .search > icon {
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}

.mulu-detail .mulu-swiper .search > input {
  margin-left: 60rpx;
}

.mulu-detail .mulu-swiper .bookInfo {
  margin-left: 30rpx;
  font-size: 28rpx;
  padding-bottom: 20rpx;
}

.mulu-detail .mulu-swiper .bookInfo image {
  height: 80rpx;
  width: 50rpx;
}

.mulu-detail .mulu-swiper .bookInfo .book {
  position: absolute;
  left: 100rpx;
  z-index: 1001;
}

.mulu-detail .mulu-swiper .bookInfo .factionName {
  display: block;
}

.mulu-detail .mulu-swiper .bookInfo .author {
  display: block;
}

.mulu-detail .mulu-swiper .bookInfo .readerTime {
  position: absolute;
  right: 30rpx;
  text-align: center;
  font-size: 24rpx;
}

.mulu-detail .mulu-swiper .bookInfo .num {
  font-size: 28rpx;
}

.mulu-detail .mulu-swiper .bookInfo .timeDes {
  display: block;
  font-size: 20rpx;
}

.mulu-detail .mulu-swiper .sections {
  height: 80%;
}

.mulu-detail .mulu-swiper .section {
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 0;
  font-size: 28rpx;
  padding-left: 30rpx;
  border-bottom: 1rpx solid;
}

.mulu-detail .mulu-swiper .section:first-child {
  border-top: 1rpx solid;
}

.mulu-detail .mulu-swiper .section:last-child {
  border-bottom: 1rpx solid;
}

.mulu-detail .mulu-swiper .factionNum {
  margin-right: 40rpx;
}

.reader-modal .des {
  font-size: 32rpx;
  text-align: left;
  padding: 30rpx 15rpx;
}
.reader-modal .btn {
  font-size: 34rpx;
  margin: 15rpx 0;
}

.reader-modal .secret-input {
  border: 1px solid #4990e2;
  height: 80rpx;
  font-size: 36rpx;
  padding: 0 15rpx;
  width: 100%;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

/* 上下滑动翻页模式样式 */
.reader .chapter-btns {
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}
.reader .chapter-btns button {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  text-align: center;
  font-size: 36rpx;
}

.reader .chapter-btns .btn1 {
  width: 90%;
  margin: 0 auto 20rpx auto;
}
.reader .chapter-btns .btn2 {
  width: 43.5%;
  display: inline-block;
}

@keyframes slideShow {
  form {
    width: 0;
  }
  to {
    width: 86%;
  }
}
