page {
  height: 100%;
}

.load-page {
  height: 100%;
  box-sizing: border-box;
  position: relative;
  padding-top: 30%;
}

.load-page::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url(https://file.lantingshucheng.com/1548171920584.jpeg) repeat-y;
  background-size: cover;
  -webkit-filter: blur(8rpx);
  filter: blur(8rpx);
}

.load-page .app-logo {
  display: block;
  margin: 0 auto 0rpx auto;
  width: 300rpx;
  height: 300rpx;
}

.load-page .app-name {
  font-size: 34rpx;
  text-align: center;
  color: #353535;
}

.load-page .status {
  margin-top: 40rpx;
  color: #666666;
}

.load-page .status-item {
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
}

.load-page .status-item .loading {
  display: block;
  margin: 0 auto;
  width: 150rpx;
  height: 150rpx;
}

.load-page .status-item > button {
  width: 50%;
  box-sizing: border-box;
  border: none;
  background-image: linear-gradient(to top, #23a0fc 0%, #52b6ff 100%);
  margin-top: 100rpx;
  margin-bottom: 30rpx;
  color: #ffffff;
  font-size: 28rpx;
  padding: 8rpx;
  box-sizing: border-box;
}

.load-page .status-item > button:active {
  background-image: linear-gradient(to top, #0891f5 0%, #4091cc 100%);
}
