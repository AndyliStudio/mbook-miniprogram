<view class="redpock {{closed ? 'zoomOutDown' : 'zoomInUp'}}">
  <!-- close -->
  <text class="iconfont icon-close" bindtap="closeIt"></text>
  <!--  红包的顶部盖子 -->
  <view class="topcontent"></view>
  <!-- 拆红包的按钮 -->
  <view class="redpock-open">
    <open-data class="avatar rotate" type="userAvatarUrl"></open-data>
  </view>
  <open-data class="name" type="userNickName"></open-data>
  <view class="redpock-text">{{text}}</view>
  <view class="btn {{opened ? 'rotate' : ''}}" bindtap="openIt">開</view>
</view>
